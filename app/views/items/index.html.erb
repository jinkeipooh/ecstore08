<div class="wrapper">
    <div class="store-side">
      <div class="store-header">
        <div class="side-box">
          <p class="store-name">ECStore</p>
        </div>
      </div>
      <div class="side-menu">
        <div class="categories">
          <ul class="buysell" >買う
            <li><%= link_to "キッズ", "#", class: "buy" %></li> 
            <li><%= link_to "メンズ", "#", class: "buy" %></li> 
            <%# ↑ここはカテゴリー一覧が表示されるように実装  %>
